#:kivy 1.10.1

<Header@BoxLayout>:
    orientation: "horizontal"
    Label:
        text: "Points: %s" % app.points
    Button:
        text: "Quit"
        on_press:
            print(self.text)
            app.quit()


<MainMenu@Screen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "continue"
            on_press:
                app.update_word()
                root.manager.current = "game_menu"
        Button:
            text: "new"
            on_press:
                root.manager.current = "new_game_menu"
        Button:
            text: "Edit"
            on_press:
                print(self.text)
                root.manager.current = "edit_words_menu"
                root.manager.edit_words_menu.list_of_words.update_words()

<GameMenu@Screen>:
    word_label: word_label
    word_input: word_input
    points_label: points_label
    check_button: check_button
    BoxLayout:
        orientation: "vertical"
        Label:
            id: points_label
        Label:
            id: word_label
        TextInput:
            text: ""
            id: word_input
        BoxLayout:
            orientation: "horizontal"
            Button:
                id: check_button
                text: "Check"
                on_press:
                    print(self.text)
                    app.update_word_after_check(word_label.text, word_input.text)
                    self.disabled = True
            Button:
                text: "next"
                on_press:
                    print(self.text)
                    app.update_word()
                    check_button.disabled = False
            Button:
                text: "quit"
                on_press: root.manager.current = "main_menu"

<NewGameMenu@Screen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "First Language"
            TextInput:
                id: first_language
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Second Language"
            TextInput:
                id: second_language
        Button:
            text: "Done"
            on_press:
                root.manager.current = "edit_words_menu"
                print(first_language.text, second_language.text)
                app.add_languages(first_language.text, second_language.text)

<EditWordsMenu@Screen>:
    list_of_words: list_of_words
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "add word"
                on_press:
                    print(self.text)
                    root.manager.current = "add_word_menu"
            Label:
                text: "words: %s" % app.number_of_words
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "%s" % app.languages[0]
                reverse: True
                on_press:
                    print(self.text, self.reverse)
                    app.order_by(app.languages[0], self.reverse)
                    self.reverse = not self.reverse
            Button:
                text: "%s" % app.languages[1]
                reverse: True
                on_press:
                    print(self.text, self.reverse)
                    app.order_by(app.languages[1], self.reverse)
                    self.reverse = not self.reverse
            Button:
                text: "Points"
                reverse: True
                on_press:
                    print(self.text, self.reverse)
                    app.order_by("points", self.reverse)
                    self.reverse = not self.reverse
            Label
        RecycleView:
            ListAllWords:
                id: list_of_words
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height  # IMPORTANT!!!

<AddWordMenu@Screen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: app.languages[0]
            TextInput:
                id: language1_word
                text: ""
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: app.languages[1]
            TextInput:
                id: language2_word
                text: ""
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Done"
                on_press:
                    print(self.text)
                    app.add_word(language1_word.text, language2_word.text)
                    language1_word.text = ""
                    language2_word.text = ""
                    app.save_game()

<Manager@ScreenManager>:
    id: manager
    name: "manager5"
    main_menu: main_menu
    new_game_menu: new_game_menu
    edit_words_menu: edit_words_menu
    add_word_menu: add_word_menu
    game_menu: game_menu
    MainMenu:
        id: main_menu
        name: "main_menu"
        manager: manager
        previous_screen: ""
    NewGameMenu:
        id: new_game_menu
        name: "new_game_menu"
        manager: manager
        previous_screen: "main_menu"
    EditWordsMenu:
        id: edit_words_menu
        name: "edit_words_menu"
        manager: manager
        previous_screen: "main_menu"
    AddWordMenu:
        id: add_word_menu
        name: "add_word_menu"
        manager: manager
        previous_screen: "edit_words_menu"
    GameMenu:
        id: game_menu
        name: "game_menu"
        manager: manager
        previous_screen: "main_menu"

<MetaGame>:
    manager: manager
    orientation: "vertical"
    Header:
        size_hint_y: 0.1
    Manager:
        id: manager